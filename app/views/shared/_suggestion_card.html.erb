<div class="col-xs-12 col-sm-3"  >
  <%= link_to suggestion_path(suggestion), :method => :put, :target => '_blank' do %>
  <%#= render 'suggestions/watchlist_button', suggestion: suggestion %>
    <div class="card-suggestion">
      <div id="watchlist-suggestion-<%= suggestion.id %>">
        <%= render 'shared/watchlist_btn', suggestion: suggestion%>
      </div>
      <span class="name"><%= suggestion.inspiration.name %> </span>
      <span class="duration"><%= suggestion.inspiration.duration %> min</span>
      <span class="source">From <%= suggestion.inspiration.source %></span>
    </div>
  <% end %>
</div>



