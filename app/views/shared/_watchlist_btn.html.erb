<% if suggestion.watchlisted %>
    <%= link_to suggestion_remove_watchlist_path(suggestion), remote: true do  %>
      <i class="fas fa-check green-remove-watchlist "></i>
    <% end %>
  <% else %>
    <%= link_to suggestion_add_watchlist_path(suggestion), remote: true do  %>
      <i class="fas fa-plus yellow-add-watchlist"></i>
    <% end %>
  <% end %>
